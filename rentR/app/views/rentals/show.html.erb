<div class="container-fluid">
	<div class="row">
		<div class="col-xs-1"></div>
		<div class="col-xs-10">
			<h1>Rental: <%= (@rental.address + " " + @rental.apartment) %></h1>

			<button type="button" class="btn btn-info btn-lg modal1-btn" data-toggle="modal" data-target="#myModal">See Leases</button>

			<div id="myModal" class="modal fade" role="dialog">
			  <div class="modal-dialog">
			    <div class="modal-content">
			      <div class="modal-header">
			        <button type="button" class="close" data-dismiss="modal">&times;</button>
			        <h4 class="modal-title">Leases listed by end date</h4>
			      </div>
			      <div class="modal-body">
			      	<% @leases.each do |l| %>
								<% if @rental.id == l.rental_id %>
									<p><%= link_to "#{l.end_date}", lease_path(l) %></p>
							  <% end %>
							<% end %>
			      </div>
			      <div class="modal-footer">
			        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
			      </div>
			    </div>
			  </div>
			</div> 

			<button type="button" class="btn btn-info btn-lg modal2-btn" data-toggle="modal" data-target="#myModal2">See Renters</button>

			<div id="myModal2" class="modal fade" role="dialog">
			  <div class="modal-dialog">
			    <div class="modal-content">
			      <div class="modal-header">
			        <button type="button" class="close" data-dismiss="modal">&times;</button>
			        <h4 class="modal-title">Renter</h4>
			      </div>
			      <div class="modal-body">
			      	<% @renters.each do |r| %>
								<% if @rental.id == r.rental_id %>
									<p><%= link_to "#{r.name}", renter_path(r) %></p>
							  <% end %>
							<% end %>
			      </div>
			      <div class="modal-footer">
			        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
			      </div>
			    </div>
			  </div>
			</div>
			<br>
			<p class="btn btn-default edit-rental-btn"><%= link_to "Edit Rental", edit_rental_path(@rental) %></p>
			<p class="btn btn-default rentals-btn"><%= link_to "All Rentals", :rentals %>
			<br>
			<p class="btn btn-default rentals-btn"><%= link_to "New Lease", new_lease_path %>
			<p class="btn btn-default rentals-btn"><%= link_to "New Renter", new_renter_path %>
			</p>
		</div>
		<div class="col-xs-1"></div>
	</div>
</div>