<div class="container-fluid">
	<div class="row">
		<div class="col-xs-1"></div>
		<div class="col-xs-10">
			<h1>Rentals</h1>
			<% if @rentals.any? %>
				<ul class="list-group rental-index">
					<% @rentals.each do |r| %>
						<li class="list-group-item"><%= link_to (r.address + " " + r.apartment), rental_path(r) %></li>
					<% end %>
				</ul>
			<% else %>
				<p>Sorry.  No rentals here!</p>
			<% end %>
			<p class="btn btn-default"><%= link_to "New Rental", new_rental_path %></p>
		</div>
		<div class="col-xs-1"></div>
	</div>
</div>