<h1>Users#new</h1>
<%= form_for @user do |f| %>
	<% if f.object.errors.any? %>
		<div class="errors">
			<ul>
				<% f.object.errors.full_messages.each do |e| %>
					<li>
						<%= e %>
					</li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<div>
		<%= f.label :email %>
		<%= f.text_field :email %>
	</div>
	<div>
		<%= f.label :password %>
		<%= f.text_field :password %>
	</div>
	<div>
		<%= f.label :password_confirmation %>
		<%= f.text_field :password_confirmation %>
	</div>	
	<div>
		<%= f.submit %>
	</div>
<% end %>
